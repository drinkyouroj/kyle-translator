# Provider API keys
# Get these from your provider accounts
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Default models for each provider
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Scoring weights (0.0 to 1.0)
# These will be automatically normalized to sum to 1.0
WEIGHT_SELF_CONFIDENCE=0.5
WEIGHT_AGREEMENT=0.4
WEIGHT_BACK_TRANSLATION=0.1

# Behavior flags
ENABLE_BACK_TRANSLATION=false
MAX_WORKERS=8
TIMEOUT_SECONDS=60

# Optional: Language codes for common languages
# SOURCE_LANG=en
# TARGET_LANG=es
